{
    "name": "bolt/codingstyle",
    "description": "Coding style for Bolt projects",
    "license": "MIT",
    "authors": [
        {
            "name": "Gawain Lynch",
            "email": "gawain.lynch@gmail.com"
        },
        {
            "name": "Carson Full",
            "email": "carsonfull@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0"
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "^3.0@dev",
        "friendsofphp/php-cs-fixer": "^2.4",
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "conflict": {
        "escapestudios/symfony2-coding-standard": "<3.0",
        "friendsofphp/php-cs-fixer": "<2.4",
        "squizlabs/php_codesniffer": "<3.0"
    },
    "autoload": {
        "psr-4": {
            "Bolt\\Sniffs\\": "Bolt/Sniffs"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bolt\\Tests\\": "Bolt/Tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    }
}
